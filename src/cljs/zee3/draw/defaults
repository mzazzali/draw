(ns zee3.draw.defaults)

(def base 
  {:x 0
   :y 0
   :width 100
   :height 100
   :lineWidth 1
   :fillStyle "#FFFFFF"
   :strokeStyle "#FFFFFF"})	

(def rounded-rectangle
     (merge base
     	    {:cornerRadius 5}))
	
(def circle
  (merge base
    {:centerX 0
     :centerY 100
     :radius 100
     :lineWidth 1}))

(def text
  {:fillStyle "#FFFFFF"
   :x 0
   :y 0
   :font "bold 16px Arial"
   :text ""})